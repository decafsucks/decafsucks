#   system "HANAMI_ENV=test bin/hanami db create > /dev/null 2>&1 || true"
#   system "HANAMI_ENV=test bin/hanami db migrate > /dev/null 2>&1 || true"
# end

# puts "\n== Ready to go! =="

if %w[help --help -h].include?(ARGV[0])
  help
else
  setup
end
